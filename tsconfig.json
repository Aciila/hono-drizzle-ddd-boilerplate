{
	"exclude": ["node_modules", "dist", "**/*.test.ts"],
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": ["bun-types"]
	}
}
