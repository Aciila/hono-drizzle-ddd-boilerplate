{
  "name": "api-boilerplate",
  "module": "src/main.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "lint": "bun x @biomejs/biome check",
    "lint:fix": "bun x @biomejs/biome check --write",
    "start": "bun dist/server.js",
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target bun",
    "db:generate": "bun drizzle-kit generate --config=drizzle.config.ts --name",
    "db:migrate": "bun drizzle-kit migrate --config=drizzle.config.ts",
    "db:drop": "bun drizzle-kit drop --config=drizzle.config.ts",
    "db:studio": "bun drizzle-kit studio --config=drizzle.config.ts",
    "format": "bun x @biomejs/biome format --write src",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/uuid": "^10.0.0",
    "bun-types": "^1.1.43",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.2"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.18.0",
    "@hono/zod-validator": "^0.4.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.11",
    "inversify": "^7.10.8",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  }
}
